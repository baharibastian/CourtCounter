<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_score_team_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginBottom="20dp"
                android:textSize="100sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"/>

            <Button
                android:id="@+id/btn_3_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 points"
                android:textSize="16sp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="#09e"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/btn_2_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 points"
                android:textSize="16sp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="#09e"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/btn_ft_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:textSize="16sp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="#09e"
                android:textColor="#fff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_score_team_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginBottom="20dp"
                android:textSize="100sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"/>

            <Button
                android:id="@+id/btn_3_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 points"
                android:textSize="16sp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="#09e"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/btn_2_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 points"
                android:textSize="16sp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="#09e"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/btn_ft_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:textSize="16sp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="#09e"
                android:textColor="#fff"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#672"
        android:text="RESET"
        android:textSize="21sp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#FFF"/>

</LinearLayout>